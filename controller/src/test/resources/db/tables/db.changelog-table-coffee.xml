<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet author="maraba" id="create-table-com.example.demo.coffee">
        <createTable tableName="com.example.demo.coffee">
            <column name="id" type="BIGINT" valueSequenceCurrent="100" defaultValueSequenceNext="100" valueSequenceNext="100" autoIncrement="true" startWith="100">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="selected" type="BOOlEAN">
                <constraints nullable="true"/>
            </column>
            <column name="available" type="BOOlEAN">
                <constraints nullable="true"/>
            </column>
            <column name="quantity" type="INTEGER">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>